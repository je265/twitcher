{
  "name": "twitcher",
  "version": "0.1.0",
  "private": true,

  "scripts": {
    "dev": "pnpm -F @apps/web dev",
    "build": "pnpm -F @apps/web build",
    "start": "pnpm -F @apps/web start",
    "db:generate": "pnpm -F @repo/prisma generate",
    "db:push": "pnpm -F @repo/prisma db push",
    "db:migrate": "pnpm -F @repo/prisma migrate dev",
    "docker:up": "cd infra && docker-compose up -d",
    "docker:down": "cd infra && docker-compose down",
    "railway:build": "pnpm install && pnpm -F @apps/web build",
    "railway:start": "pnpm -F @apps/web start"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
